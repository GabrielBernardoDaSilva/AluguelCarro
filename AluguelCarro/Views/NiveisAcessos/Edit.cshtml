@model AluguelCarro.Models.NiveisAcesso

@{
    ViewData["Title"] = "Editar Nivel de Acesso "+ Model.Name;
}

<div class="border border-light rounded shadow col-md-8 ">
    <div class="container">
        <h3 class="titulo"><i class="fas fa-user-lock fa-lg "></i>@ViewData["Title"]</h3>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control-lg" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Descrircao" class="control-label"></label>
                            <input asp-for="Descrircao" class="form-control-lg" />
                            <span asp-validation-for="Descrircao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group botoes">
                        <input type="submit" value="Salvar" class="btn btn-outline-info btn-lg " /> &nbsp;
                        <a asp-action="Index" class="btn btn-link btn-lg ">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
